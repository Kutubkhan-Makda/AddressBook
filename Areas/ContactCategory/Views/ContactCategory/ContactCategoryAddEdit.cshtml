@{
    ViewData["Title"] = "ContactCategory Add/Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model Multi_AddressBook.Areas.Models.ContactCategoryModel
<div class="row">
    <div class="col-md-12">
        <h3> @TempData["ContactCategoryInsertMsg"]</h3>
        <form method="post" asp-controller="ContactCategory" asp-action="Save" enctype="multipart/form-data">
            @Html.HiddenFor(x=>x.ContactCategoryID)
            <div class="form-group">
                <label>ContactCategory Name</label>
                <input type="text" asp-for="ContactCategoryName" class=form-control placeholder="Enter ContactCategory Name" />
            </div>
            
            <hr />
            <div class="center-button"><input class="btn btn-success" type="submit" value="Save"></div>
            <div class="center-button"><a asp-controller="LOC_Country" asp-action="Index" class="btn btn-danger">Cancel</a></div>
        </form>
    </div>
</div>